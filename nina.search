<script>
    let currentQuery = '';

    async function searchNina() {
        const query = document.getElementById('query').value.trim();
        if (!query) {
            showStatus('üîç', 'Ê§úÁ¥¢„Ç≠„Éº„ÉØ„Éº„Éâ„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
            return;
        }

        currentQuery = query;
        showStatus('‚è≥', `"${query}" „ÇíÊ§úÁ¥¢‰∏≠...`);

        try {
            // Nina Protocol Search API
            const response = await fetch('https://api.ninaprotocol.com/v1/search', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ query })
            });

            if (!response.ok) {
                throw new Error(`API Error: ${response.status} ${response.statusText}`);
            }

            const data = await response.json();
            console.log('Search results:', data);
            
            // releases, hubs, artists „ÅåËøî„Å£„Å¶„Åè„ÇãÂèØËÉΩÊÄß„Åå„ÅÇ„Çã
            const releases = data.releases || [];
            const hubs = data.hubs || [];
            const artists = data.artists || [];
            
            displayResults(releases, hubs, artists);

        } catch (error) {
            console.error("Search failed:", error);
            showError(`Ê§úÁ¥¢„Å´Â§±Êïó„Åó„Åæ„Åó„Åü: ${error.message}`);
        }
    }

    function displayResults(releases, hubs, artists) {
        const resultsDiv = document.getElementById('results');
        resultsDiv.innerHTML = '';

        const totalResults = releases.length + hubs.length + artists.length;

        if (totalResults === 0) {
            showStatus('üòï', `"${currentQuery}" „ÅÆÊ§úÁ¥¢ÁµêÊûú„ÅåË¶ã„Å§„Åã„Çä„Åæ„Åõ„Çì„Åß„Åó„Åü`);
            return;
        }

        // Releases„ÇíË°®Á§∫
        releases.forEach(release => {
            const item = createReleaseItem(release);
            resultsDiv.appendChild(item);
        });

        // ÂøÖË¶Å„Å´Âøú„Åò„Å¶Hubs„ÇÑArtists„ÇÇË°®Á§∫ÂèØËÉΩ
        // „Åì„ÅÆ‰æã„Åß„ÅØReleases„ÅÆ„ÅøË°®Á§∫
    }

    function createReleaseItem(release) {
        const item = document.createElement('div');
        item.className = 'release-item';
        
        // ÁîªÂÉèURLÔºà„É°„Çø„Éá„Éº„Çø„Åã„ÇâÂèñÂæóÔºâ
        const imageUrl = release.metadata?.image || 
                        release.image || 
                        'https://via.placeholder.com/400x400/1a1a2e/667eea?text=No+Image';
        
        // „Ç¢„Éº„ÉÜ„Ç£„Çπ„ÉàÂêç
        const artist = release.metadata?.properties?.artist || 
                      release.metadata?.symbol || 
                      release.account?.handle ||
                      'Unknown Artist';
        
        // „Çø„Ç§„Éà„É´
        const title = release.metadata?.name || 
                     release.metadata?.properties?.title ||
                     'Untitled';
        
        item.innerHTML = `
            <img src="${imageUrl}" alt="${title}" loading="lazy" onerror="this.src='https://via.placeholder.com/400x400/1a1a2e/667eea?text=No+Image'">
            <div class="release-info">
                <div class="release-title">${escapeHtml(title)}</div>
                <div class="release-artist">${escapeHtml(artist)}</div>
            </div>
        `;
        
        // „ÇØ„É™„ÉÉ„ÇØ„Åß„Éó„É¨„Ç§„É§„Éº„ÇíË°®Á§∫
        item.onclick = () => playNina(release.publicKey, title, artist);
        
        return item;
    }

    function playNina(publicKey, title, artist) {
        const playerSection = document.getElementById('player-section');
        const iframe = document.getElementById('nina-embed');
        
        // NinaÂÖ¨Âºè„ÅÆEmbed URL
        // hubs.ninaprotocol.com „Åæ„Åü„ÅØ ninaprotocol.com „ÅÆembed„Çí‰ΩøÁî®
        const embedUrl = `https://ninaprotocol.com/${publicKey}/embed`;
        
        iframe.src = embedUrl;
        playerSection.style.display = 'block';
        
        // „Éó„É¨„Ç§„É§„Éº„Åæ„Åß„Çπ„É†„Éº„Ç∫„Çπ„ÇØ„É≠„Éº„É´
        setTimeout(() => {
            playerSection.scrollIntoView({ 
                behavior: 'smooth', 
                block: 'center' 
            });
        }, 100);
        
        console.log(`Playing: ${title} by ${artist} (${publicKey})`);
    }

    function showStatus(icon, message) {
        document.getElementById('results').innerHTML = `
            <div class="status">
                <div class="status-icon">${icon}</div>
                <div>${message}</div>
            </div>
        `;
    }

    function showError(message) {
        document.getElementById('results').innerHTML = `
            <div class="error">
                ‚ö†Ô∏è ${message}
                <br><br>
                <small>API„ÅÆ‰ªïÊßò„ÅåÂ§âÊõ¥„Åï„Çå„Å¶„ÅÑ„ÇãÂèØËÉΩÊÄß„Åå„ÅÇ„Çä„Åæ„Åô„ÄÇ„Ç≥„É≥„ÇΩ„Éº„É´„Åß„Ç®„É©„ÉºË©≥Á¥∞„ÇíÁ¢∫Ë™ç„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ</small>
            </div>
        `;
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´„Çµ„É≥„Éó„É´Ê§úÁ¥¢„ÇíË°®Á§∫Ôºà„Ç™„Éó„Ç∑„Éß„É≥Ôºâ
    // window.addEventListener('load', () => {
    //     document.getElementById('query').value = 'techno';
    //     searchNina();
    // });
</script>

